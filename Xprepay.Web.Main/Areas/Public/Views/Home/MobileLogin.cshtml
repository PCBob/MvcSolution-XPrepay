@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Xprepay</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm.min.css">
    <link rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm-extend.min.css">
    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
            font-family: "Microsoft YaHei";
        }
        body {
            background-image: url('../../areas/public/img/bg.jpg');
            background-size: cover;
        }
        .container {
            padding-top: 200px;
            width: 80% !important;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
            font-size: 16px;
        }

            .container H3 {
                text-align: center;
                color: whitesmoke;
                padding: 5px;
                margin:10px;
            }

        .login {
            padding: 15px;
            background: rgba(255,255,255,.45);
            border-radius: 5px;
        }

        .row {
            margin-bottom: 20px;
        }
        input[type="text"], input[type="password"] {
            font-family: "Microsoft YaHei";
            font-size: 16px;
            border-radius: 5px;
            padding-left: 5px;
            padding-right: 5px;
            width:100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login">
            <h3>Xprepay Stytem</h3>
            <div class="row">
                <div class="col-10">&nbsp;</div>
                <div class="col-80"><input id="UserName" type="text" class="form-control" placeholder="LoginName"></div>
                <div class="col-10">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-10">&nbsp;</div>
                <div class="col-80">
                <input id="Password" type="password" class="form-control" placeholder="Password" aria-describedby="sizing-addon2"></div>
                <div class="col-10">&nbsp;</div>
            </div>
                <div class="row">
                    <div class="col-20">&nbsp;</div>
                    <div class="col-60"><a id="login" href="#" class="button button-fill">Login</a></div>
                    <div class="col-20">&nbsp;</div>
                </div>
        </div>
    </div>
    <script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
    <script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm-extend.min.js' charset='utf-8'></script>
    <script type="text/javascript">
        function loginModel() {
            return {
                UserName: $("#UserName").val(),
                Password: $("#Password").val(),
            }
        }
        $("#login").click(function () {
            $.post("/home/login", loginModel(), function (data) {
                if (data.Success) {
                    window.location.href = "/Mobile"
                } else {
                    $.toast(data.Message, 2000);
                    console.log(data);
                }
            });
        });
    </script>
</body>
</html>